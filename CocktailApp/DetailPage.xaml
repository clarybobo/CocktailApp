<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:viewmodels="clr-namespace:CocktailApp.ViewModels"
             x:DataType="viewmodels:DetailsViewModel"
             x:Class="CocktailApp.DetailPage"
             Title="{Binding Cocktail.StrDrink}">
    <VerticalStackLayout>
        <Image Source="{Binding Cocktail.StrDrinkThumb}"></Image>
        <Label 
            Text="{Binding Cocktail.StrDrink}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Text="{Binding Cocktail.StrInstructions}"></Label>
    </VerticalStackLayout>
</ContentPage>