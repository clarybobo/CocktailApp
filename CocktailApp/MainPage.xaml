    <Grid RowDefinitions="Auto, Auto, Auto, *"
          ColumnDefinitions="*"
          Padding="30,0">

        <!-- Sökruta -->
        <Entry Placeholder="Enter name of cocktail"
               Text="{Binding SearchQuery}"
               Grid.Row="0"
               Margin="0,10,0,10" />

        <!-- Sök-knapp -->
        <Button Text="Search"
                Command="{Binding SearchCommand}"
                Grid.Row="1"
                Margin="0,10,0,10" />

        <!-- Get Cocktails-knapp -->
        <Button Text="Get Cocktails"
                Command="{Binding GetCommand}"
                Grid.Row="2"
                Margin="0,10,0,10" />

        <!-- Lista med cocktails -->
        <CollectionView ItemsSource="{Binding Cocktails}"
                        Grid.Row="3">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Cocktail">
                    <!--Här kan man ha en swipeview om man vill-->
                    <Frame HeightRequest="125"
                           Margin="5"
                           Padding="5"
                           BackgroundColor="LightSteelBlue">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=ViewDetailsCommand}"
                                CommandParameter="{Binding .}"/>
                        </Frame.GestureRecognizers>
                        <HorizontalStackLayout Padding="10">
                            <Image Source="{Binding StrDrinkThumb}"
                               HeightRequest="100"
                               WidthRequest="100"
                               Aspect="AspectFill" />
                            <VerticalStackLayout>
                                <Label Text="{Binding StrDrink}"
                                   FontAttributes="Bold"
                                   FontSize="18" />
                                <Label Text="{Binding StrInstructions}"
                                  FontSize="Default"></Label>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
