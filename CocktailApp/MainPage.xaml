<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:CocktailApp.ViewModels"
             xmlns:models="clr-namespace:CocktailApp.Models"
             x:Class="CocktailApp.MainPage">

    <Grid RowDefinitions="Auto, Auto, Auto, *"
          ColumnDefinitions="*"
          Padding="30,0"
          BackgroundColor="white">

        <!-- Sökruta -->
        <Entry Placeholder="Enter name of cocktail"
               TextColor="Black"
               Text="{Binding SearchQuery}"
               Grid.Row="0"
               Margin="0,10,0,10" />

        <!-- Sök-knapp -->
        <Button Text="Search"
                BackgroundColor="MediumPurple"
                TextColor="Black"
                FontAttributes="Bold"
                Command="{Binding SearchCommand}"
                Grid.Row="1"
                Margin="0,10,0,10" />       

        <!-- Lista med cocktails -->
        <CollectionView ItemsSource="{Binding Cocktails}"
                        Grid.Row="3"
                       >
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Cocktail">
                    <!--Här kan man ha en swipeview om man vill-->
                    <Frame HeightRequest="125"
                           Margin="5"
                           Padding="5"
                           BackgroundColor="White">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=ViewDetailsCommand}"
                                CommandParameter="{Binding .}"/>
                        </Frame.GestureRecognizers>
                        <HorizontalStackLayout Padding="10">
                            <Image Source="{Binding StrDrinkThumb}"
                               HeightRequest="100"
                               WidthRequest="100"
                               Aspect="AspectFill" />
                            <VerticalStackLayout>
                                <Label Text="{Binding StrDrink}"
                                   FontAttributes="Bold"
                                   FontSize="18" />
                                <Label Text="{Binding StrInstructions}"
                                  FontSize="Default"></Label>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
